{% extends 'base.html.twig' %}

{% block title %}Liste stagiaires{% endblock %}

{% block body %}
<h1>{{ session }}</h1>

<div id="id" class="text-light bg-dark py-3">
    <p>Formateur réferant : {{ session.formateurs }} </p>
    <p>Date de début : {{ session.dateDebut | date('d-m-Y') }}</p>
    <p>Date de début : {{ session.dateFin | date('d-m-Y') }}</p>
    <p>NB places : {{ session.placesTheoriques }}</p>
    <p>Nb place restante : {{ session.placesRestantes }}</p>
</div>

<div id="inscrits">
    <h2 class="text-danger">Liste des inscrits</h2>

    <h1>Liste des stagiaires</h1>
    <table class="table table-stripped table-sm">
        <thead id="table-head">
            <tr>
                <th>Stagiaire</th>
                <th>Email</th>
                <th>Telephone</th>
            </tr>
        </thead>
        <tbody>
            {% for stagiaire in session.stagiaires %}
                <tr>
                    <td>{{ stagiaire }}</td>
                    <td>{{ stagiaire.email }}</td>
                    <td>{{ stagiaire.telephone }}</td>
                </tr>
            {% endfor %}
    </table>
</div>

<h2>Stagiaires non-inscrit</h2>

<div>
    <table class="table table-stripped table-sm">
        <thead id="table-head">
            <tr>
                <th>Stagiaire</th>
                <th>Email</th>
                <th>Telephone</th>
            </tr>
        </thead>
        <tbody>
            {% for pas_la in stagiaire %}
                <tr>
                    <td>{{ pas_la.nom}} {{ pas_la.prenom }}</td>
                    <td>{{ pas_la.email }}</td>
                    <td>{{ pas_la.telephone }}</td>
                </tr>
            {% endfor %}
    </table>
</div>

<div id="programme">
    <table class="table table-stripped table-sm">
        <thead id="table-head">
            <tr>
                <th>Module</th>
                <th>Matiere</th>
                <th>Duree</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for programme in session.planifiers %}
                <tr>
                    <td>{{ programme.modulesFormation.intitule }}</td>
                    <td>{{ programme.modulesFormation.categories.intitule }}</td>
                    <td>{{ programme.duree }} jours</td>
                </tr>
            {% endfor %}
    </table>
</div>
{% endblock %}